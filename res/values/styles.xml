<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
<!--     <item name="android:windowBackground">@color/custom_theme_color</item>
      <item name="android:colorBackground">@color/custom_theme_color</item>
       -->  
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="userRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/user_ratingstars</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>
    </style>
    
    <style name="dbRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/db_ratingstars</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>
    </style>

    <style 
        name="ApplicationStyle" parent="AppTheme">
  		<item name="android:buttonStyle">@style/buttonStyle</item>
 	</style>
  
	<style name="buttonStyle" parent="@android:style/Widget.Button">
       <item name="android:textSize">16sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">#2C6700</item>
       <item name="android:gravity">center</item>
       <item name="android:background">@drawable/custom_button</item>
       <item name="android:padding">10dip</item>
   </style>
</resources>