<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

	<color name="custom_theme_color">#b0b0ff</color>
    
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
<!--     <item name="android:windowBackground">@color/custom_theme_color</item>
      <item name="android:colorBackground">@color/custom_theme_color</item>
       -->  
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="userRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/user_ratingstars</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>
    </style>
    
    <style name="dbRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/db_ratingstars</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>
    </style>

</resources>