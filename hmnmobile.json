{
	"$schema": "http://json-schema.org/draft-04/schema#",
	
	"description": "Schema for POSTing data to the HMN database",
	"type": "object",
	"required": ["id"],
	
	"definitions": { 
		"state": {
			"type": "object",
			"properties": {
				"timestamp": {"description": "The time app state has changed", "type": "number"},
				"action": {"enum": ["close", "start"]}
			},
			"additionalProperties": false
		},
		
		"deviceInfo": {
			"type": "object",
			"properties": {
				"os": {"type": "string"},
				"version": {"type": "string"},
				"device": {"type": "string"}, 
				"ip": { "type": "string"}
			},
			"additionalProperties": false
		},
		
		"powerEntry": {
			"type": "object",
			"properties": {
				"screenOn": {"type": "boolean"},
				"charging": {"type": "boolean"},
				"chargingMethod": {"enum": ["usb", "ac", "other"]},
				"battery": {"type": "number"}
			},
			"additionalProperties": false
		},

		"networkData": {
			"type": "object",
			"properties": {
				"timestamp": {"description": "The time this data was collected, in miliseconds from epoch", "type": "number"},	
				"sent": {"description": "Data sent, in bytes", "type": "number"},
				"received": {"description": "Data received, in bytes", "type": "number"}
			}
		},
		
		"totalNetwork": {
			"type": "object",
			"properties": {
				"wifi": {"$ref": "#/definitions/networkData"},
				"mobile": {"$ref": "#/definitions/networkData"},
				"gprs": {"$ref": "#/definitions/networkData"},
				"edge": {"$ref": "#/definitions/networkData"},
				"cdma": {"$ref": "#/definitions/networkData"},
				"hspa": {"$ref": "#/definitions/networkData"},
				"lte": {"$ref": "#/definitions/networkData"},
				"unknownmobile": {"$ref": "#/definitions/networkData"},
				"wimax": {"$ref": "#/definitions/networkData"},
				"bluetooth": {"$ref": "#/definitions/networkData"},
				"ethernet": {"$ref": "#/definitions/networkData"},
				"other": {"$ref": "#/definitions/networkData"}
			},
			"additionalProperties": false
		},
		
		"networkEntry": {
			"type": "object",
			"required": ["timestamp"],
			"properties": {
				"timestamp": {"description": "The time this data was collected, in miliseconds from epoch", "type": "number"},
				"connection": {"enum": ["wifi", "mobile", "gprs", "edge", "cdma", "hspa", "lte", "unknowmobile", "wimax", "bluetooth", "ethernet", "other"]},
				"strength": {"type": "number"}
			},
			"$ref": "#/definitions/networkData",
			"additionalProperties": false
		},
		
		"cpuEntry": {
			"type": "object", 
			"properties": { 
				"cpuUsage": {"type": "number"}
			}, 
			"additionalProperties": false
		},
		
		"stateTime": {
			"type": "object",
			"properties": {
				"active": {"description": "Incremental time app has been in active state, in miliseconds", "type": "number"},
				"foreground": {"description": "Incremental time app has been in foreground state, in miliseconds", "type": "number"},
				"background": {"description": "Incremental time app has been in background state, in miliseconds", "type": "number"},
				"cached": {"description": "Incremental time app has been in cached state, in miliseconds", "type": "number"},
				"running": {"description": "Incremental time app has been in running state, in miliseconds", "type": "number"},
				"notrunning": {"description": "Incremental time app has been in not running state, in miliseconds", "type": "number"}
			},
			"additionalProperties": false
		},

		"statsEntry": {
			"type": "object",
			"required": ["timestamp"],
			"properties": {
				"timestamp": {"description": "The time this data was collected, in miliseconds from epoch", "type": "number"},
				"network": {
					"description": "Total network usage by type",
					"$ref": "#/definitions/totalNetwork"
				},
				"power": {
					"description": "Battery usage at this point",
					"$ref": "#/definitions/powerEntry"
				},
				"cpu": {
					"description": "CPU usage at this point",
					"$ref": "#/definitions/cpuEntry"
				}
			},
			"additionalProperties": false
		},
		
		"iOSLogEntry": {
			"type": "object",
			"description": "Information about an entry in the iOS system log file",
			"required": ["timestamp"],
			"properties": {
				"timestamp": {"description": "The timestamp associated with this log entry, in miliseconds", "type": "number"},
				"message": {"description": "The actual message text", "type": "string"},
				"level": {"description": "The level of the message", "type": "string"}
			},
			"additionalProperties": false
		},

		"app": {
			"type": "object",
			"required": ["name"],
			"properties": {
				"name": {"type": "string"},


				"bundleId": {
					"description": "App Store id corresponding to the app's name",
					"type": "string"
				},
				
				"rating": {
					"description": "The user's rating of this app. This should be a number between 0 and 5.",
					"type": "number"
				},
				
				"states": {
					"type": "array", 
					"items": { 
						"type": "object",
						"properties": {
							"timestamp": {"description": "The time this data was collected, in miliseconds from epoch", "type": "number"},
							"currentState": {"enum": ["active", "foreground", "background", "cached", "running", "notrunning"]},
							"stateTime": {
								"description": "The amount of time spent in each app state",
								"$ref": "#/definitions/stateTime"
							}
						}
					}
				},
				
				"network": 
					"type": "array",
						"items": {
							"description": "App's network usage",
							"$ref": "#/definitions/networkEntry"
						}
				},
			
				"logs": {
					"type": "array",
					"items": {
						"description": "A message that was in the iOS system log file, concerning this app",
						"$ref": "#/definitions/iOSLogEntry"
					}
				}
			},
			"additionalProperties": false
		}
	},
	
	"properties": {
		"id": {
			"description": "The unique identifier assocaited with the sending device",
			"type": "string"
		},
		
		"state": {
			"description": "State of the sending device",
			"$ref": "#/definitions/state"
		},
		
		"info": {
			"description": "Basic info about the sending device",
			"$ref": "#/definitions/deviceInfo"
		},
		
		"stats": {
			"type": "array",
			"items": {"$ref": "#/definitions/statsEntry"}
		},

		"apps": {
			"type": "array",
			"items": {"$ref": "#/definitions/app"}
		} 
	}
}
